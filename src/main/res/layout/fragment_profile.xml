<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B1B1B"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- User Name -->
        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Name"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp" />

        <!-- Email Label -->
        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logged in as: "
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

        <!-- User Email -->
        <TextView
            android:id="@+id/userEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="you@example.com"
            android:textColor="#EFEDED"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#333"
            android:layout_marginVertical="16dp" />



        <!-- Section Title -->
        <TextView
            android:text="Profile Stats"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Weekly Stats -->
        <TextView
            android:id="@+id/weeklyExpensesText"
            android:text="Weekly Expenses: Tk0"
            android:textColor="#FBFAFA"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/weeklyBudgetSetText"
            android:text="Weekly Budget: Tk0"
            android:textColor="#FBFBFB"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/weeklyRemainingBudgetText"
            android:text="Remaining Weekly Budget: Tk0"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Monthly Stats -->
        <TextView
            android:id="@+id/monthlyExpensesText"
            android:text="Monthly Expenses: Tk0"
            android:textColor="#FFFCFC"
            android:textSize="16sp"
            android:layout_marginTop="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/monthlyBudgetSetText"
            android:text="Monthly Budget: Tk0"
            android:textColor="#FFFDFD"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/monthlyRemainingBudgetText"
            android:text="Remaining Monthly Budget: Tk0"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <!-- Profile Options -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/generatePdfButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Download Budget Summary "
                android:backgroundTint="#753CD3"
                android:textColor="#FFFFFF"
                android:layout_marginTop="12dp" />

            <Button
                android:id="@+id/editProfileButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:backgroundTint="#753CD3"
                android:textColor="#FFFFFF"
                android:layout_marginVertical="8dp" />

            <Button
                android:id="@+id/changePasswordButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:backgroundTint="#43A047"
                android:textColor="#FFFFFF"
                android:layout_marginVertical="8dp" />

            <Button
                android:id="@+id/logoutButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:backgroundTint="#E53935"
                android:textColor="#FFFFFF"
                android:layout_marginVertical="8dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
