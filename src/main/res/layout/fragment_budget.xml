<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="16dp"
    android:fillViewport="true"
    tools:ignore="ExtraText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/userNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello!"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"/>

        <!-- Budget summary -->
        <TextView
            android:id="@+id/budgetSummaryTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Budget Summary"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginBottom="24dp" />

        <!-- Weekly Budget -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add weekly budget"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/weeklyBudgetEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:hint="e.g. 500"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#CCCCCC"
            android:layout_marginBottom="16dp" />

        <!-- Monthly Budget -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add monthly budget"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/monthlyBudgetEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:hint="e.g. 2000"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#CCCCCC"
            android:layout_marginBottom="24dp" />

        <!-- Status Text -->
        <TextView
            android:id="@+id/budgetStatusTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status will appear here"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />

        <!-- Save Budget -->
        <Button
            android:id="@+id/saveButton"
            android:text="Save Budget"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Generate PDF -->
        <Button
            android:id="@+id/generatePdfButton"
            android:text="Download Detailed Expense(pdf)"
            android:layout_marginBottom="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Time Toggle -->
        <RadioGroup
            android:id="@+id/timeToggleGroup"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/weeklyToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Weekly"
                android:textColor="#FFFFFF" />

            <RadioButton
                android:id="@+id/monthlyToggle"
                android:text="Monthly"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RadioGroup>

    </LinearLayout>
</ScrollView>
